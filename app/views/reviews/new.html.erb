<div class="container">
  <h1>Create a new review for <%=@restaurant.name%></h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
    <%= f.submit %>
  <% end %>

  <%= link_to "Back to restaurant", restaurant_path(@restaurant) %>
</div>
